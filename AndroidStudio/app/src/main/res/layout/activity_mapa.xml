<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".MapaActivity">

    <LinearLayout
        android:id="@+id/linearLayoutBotoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <Button
            android:id="@+id/ButtonConcluir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Concluir" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="210dp"
            android:layout_height="15dp"
            android:layout_weight="1">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/ButtonCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        tools:context=".Map_Fragment"
        android:id="@+id/frame_layout">
        <fragment

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/myGoogleMap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            tools:layout="@layout/activity_mapa">
        </fragment>

    </FrameLayout>

    <Button
        android:id="@+id/ButtonDetalhes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalhes" />

    <Button
        android:id="@+id/ButtonDirections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Directions"
        />


</LinearLayout>